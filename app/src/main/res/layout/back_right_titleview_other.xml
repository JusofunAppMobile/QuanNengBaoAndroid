<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="fill_parent"
    android:id="@+id/titleBackgroud"
    android:layout_height="@dimen/titleView_height"
    android:paddingRight="@dimen/right_padding_or_margin"
    android:paddingLeft="@dimen/left_padding_or_margin"
    skin:enable="true"
     >

    <ImageView
        android:id="@+id/left_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minHeight="15dp"
        android:minWidth="15dp"
        android:layout_marginRight="10dip"
        android:textSize="@dimen/title_right_textsize"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        />
    
    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minHeight="25dp"
        android:visibility="invisible"
        android:minWidth="25dp"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:textColor="@color/white"
        android:textSize="@dimen/title_right_textsize" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:textColor="#FFF"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:textSize="@dimen/title_center_textsize"
        />

</RelativeLayout>