<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyTheme.Layout.Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.jusfoun.jusfouninquire.ui.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/phone_number_layout"
        style="@style/C_107"
        android:layout_marginTop="40dp">

        <ImageView
            style="@style/C_101_2"
            android:src="@drawable/img_phone" />

        <EditText
            android:id="@+id/phoneNumEdit"
            style="@style/C_106"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:inputType="number" />

    </LinearLayout>

    <com.jusfoun.jusfouninquire.ui.view.LineScaleView
        android:id="@+id/vLine1"
        style="@style/C_LineView" />

    <LinearLayout
        android:id="@+id/auth_code_layout"
        style="@style/C_107"
        android:layout_marginTop="20dp">

        <ImageView
            style="@style/C_101_2"
            android:src="@drawable/img_lock" />

        <EditText
            android:id="@+id/auth_code_Edit"
            style="@style/C_106"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:inputType="number" />

        <TextView
            android:id="@+id/getAuthCode"
            style="@style/C_Code" />

    </LinearLayout>

    <com.jusfoun.jusfouninquire.ui.view.LineScaleView
        android:id="@+id/vLine2"
        style="@style/C_LineView" />

    <Button
        android:id="@+id/btn_info"
        style="@style/C_Common_Bt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dip"
        android:text="确认修改" />

</LinearLayout>