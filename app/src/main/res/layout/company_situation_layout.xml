<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/background_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nametextview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="@dimen/right_padding_or_margin"
                android:text=""
                android:textColor="#333333"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingRight="@dimen/right_padding_or_margin">

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/skin_place"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/list_sub_content_lighttextcolor"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_legal_near"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/list_sub_content_lighttextcolor"
                android:textSize="14dp"
                skin:enable="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/seeDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:text="查看详情"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#FC7B2B"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_look_detail"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_or_margin"
            android:paddingRight="@dimen/right_padding_or_margin"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资产"
                    android:textColor="@color/list_sub_content_lighttextcolor"
                    android:textSize="14dp"
                    skin:enable="true" />

                <TextView
                    android:id="@+id/assets_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/list_sub_content_lighttextcolor"
                    android:textSize="14dp"
                    skin:enable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营收"
                    android:textColor="@color/list_sub_content_lighttextcolor"
                    android:textSize="14dp"
                    skin:enable="true" />

                <TextView
                    android:id="@+id/income_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/list_sub_content_lighttextcolor"
                    android:textSize="14dp"
                    skin:enable="true" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/selector_company_situation"
            android:orientation="horizontal"
            skin:enable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/company_detail_blue"
                android:drawablePadding="10dip"
                android:singleLine="true"
                android:text="看详情"
                android:textColor="@color/choosetextvalue_tag"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/listview_first_selector" />

        <RelativeLayout
            android:id="@+id/collectCompanyLayout"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/selector_company_situation">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/collectCompanyImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_collection_blue" />

                <TextView
                    android:id="@+id/collectCompanyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:singleLine="true"
                    android:text="收藏"
                    android:textColor="@color/choosetextvalue_tag"
                    android:textSize="14dp"
                    skin:enable="true" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">




        <LinearLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/img_loc"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/company_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:paddingLeft="10dp"
                android:textColor="#3E3E3E"
                android:textSize="14sp"
                skin:enable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrows"
                android:visibility="invisible" />
        </LinearLayout>
        <View style="@style/s_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/img_near_call"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/call_phoneView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:paddingBottom="14dp"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/right_padding_or_margin"
                android:paddingTop="14dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="13sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_right_jiantou" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/s_line" />

    <LinearLayout
        android:id="@+id/companyInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/company_infoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/left_padding_or_margin"
            android:paddingRight="@dimen/right_padding_or_margin"
            android:paddingTop="16dp"
            android:text=""
            android:textColor="#696969"
            skin:enable="true" />

    </LinearLayout>



    <View style="@style/s_line_double" />

    <LinearLayout style="@style/table_parent">

        <TextView
            style="@style/table_title_item"
            android:text="注册号:" />

        <TextView
            android:id="@+id/registerNumView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <View style="@style/s_line_double" />

    <LinearLayout style="@style/table_parent">

        <TextView
            style="@style/table_title_item"
            android:text="类型:" />

        <TextView
            android:id="@+id/companyTypeView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <View style="@style/s_line_double" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/corporateType"
                style="@style/table_title_item"
                android:text="法人:" />


            <TextView
                android:id="@+id/corporateView"
                style="@style/table_title_item.white" />


        </LinearLayout>


        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                style="@style/table_title_item"
                android:text="注册资金:" />

            <TextView
                android:id="@+id/registerCapitaView"
                style="@style/table_title_item.white"
                android:textColor="#F92626"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/s_line_double" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                style="@style/table_title_item"
                android:text="成立日期:" />

            <TextView
                android:id="@+id/registerDateView"
                style="@style/table_title_item.white" />

        </LinearLayout>


        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                style="@style/table_title_item"
                android:text="登记状态:" />

            <TextView
                android:id="@+id/businessStateView"
                style="@style/table_title_item.white" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/s_line_double" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                style="@style/table_title_item"
                android:text="股东数:" />

            <TextView
                android:id="@+id/legalNumView"
                style="@style/table_title_item.white" />

        </LinearLayout>


        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">


            <TextView
                style="@style/table_title_item"
                android:text="投资次数:" />

            <TextView
                android:id="@+id/investmentNumView"
                style="@style/table_title_item.white" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/s_line_double" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                style="@style/table_title_item"
                android:text="主要人员:" />

            <TextView
                android:id="@+id/keyPersonalNumView"
                style="@style/table_title_item.white"
                android:textColor="#FE7E00" />


        </LinearLayout>


        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">


            <TextView
                style="@style/table_title_item"
                android:text="工商变更:" />

            <TextView
                android:id="@+id/ICchangeNumICchangeNumView"
                style="@style/table_title_item.white"
                android:textColor="#FE7E00" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/s_line_double" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                style="@style/table_title_item"
                android:text="诉讼数:" />


            <TextView
                android:id="@+id/lawsuitNumView"
                style="@style/table_title_item.white"
                android:textColor="#43A520" />

        </LinearLayout>


        <LinearLayout
            style="@style/table_parent"
            android:layout_weight="1">

            <TextView
                style="@style/table_title_item"
                android:text="处罚数:" />

            <TextView
                android:id="@+id/punishNumView"
                style="@style/table_title_item.white"
                android:textColor="#43A520" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/s_line_double" />

</LinearLayout>