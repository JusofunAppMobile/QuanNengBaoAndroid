<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/MyTheme.Layout.Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <com.jusfoun.jusfouninquire.ui.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <RelativeLayout
                android:id="@+id/head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="#333333"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/arrow"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="13dp"
                    android:drawableRight="@mipmap/arrows"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/headImageView"
                    android:layout_width="63dip"
                    android:layout_height="63dip"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/arrow"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:failureImage="@mipmap/default_head_image"
                    fresco:placeholderImage="@mipmap/default_head_image"
                    fresco:roundAsCircle="true" />

            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dip"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/user_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:text="昵称"
                    android:textColor="#333333"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/arrows"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:background="@null"
                    android:gravity="center|right"
                    android:hint="请输入昵称"
                    android:maxLength="10"
                    android:textColor="#999999"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <com.jusfoun.jusfouninquire.ui.view.PersonInfoView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="企业" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <com.jusfoun.jusfouninquire.ui.view.PersonInfoView
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="职位" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <com.jusfoun.jusfouninquire.ui.view.PersonInfoView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:title_text="性别" />

            <com.jusfoun.jusfouninquire.ui.view.PersonInfoView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="手机号" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>