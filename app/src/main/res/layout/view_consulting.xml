            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pictuer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                fresco:actualImageScaleType="centerCrop"
                fresco:failureImage="@mipmap/sitdown"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/sitdown"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundingBorderColor="#e3e3e3"
                fresco:roundingBorderWidth="1dp" />

            <TextView
                android:id="@+id/reader_count2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:background="#33000000"
                android:gravity="center_vertical|end"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_important2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pictuer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                fresco:actualImageScaleType="centerCrop"
                fresco:failureImage="@mipmap/sitdown"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/sitdown"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundingBorderColor="#e3e3e3"
                fresco:roundingBorderWidth="1dp" />


            <TextView
                android:id="@+id/reader_count3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:background="#33000000"
                android:gravity="center_vertical|end"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_important3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>