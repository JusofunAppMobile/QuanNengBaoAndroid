<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyTheme.Layout.Root"
    android:background="@color/backgroudcolor">


    <com.jusfoun.jusfouninquire.ui.view.BackAndRightImageTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/titleView"
        android:background="@color/line_color" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/line1"
        android:layout_marginTop="15dp"
        android:background="@color/line_color" />


    <com.jusfoun.jusfouninquire.ui.widget.DisableMenuEditText
        android:id="@+id/feekback_contact"
        android:layout_width="match_parent"
        android:layout_height="165dip"
        android:layout_below="@+id/line2"
        android:background="@color/white"
        android:padding="10dip"
        android:textSize="16dp"
        android:textColor="@color/edit_text_color"
        android:textColorHint="@color/eidt_hint_textcolor"
        android:hint="@string/manually_search_content"
        android:gravity="top|left"
        />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/feekback_contact"
        android:background="@color/line_color" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/line3"
        android:layout_marginTop="15dp"
        android:background="@color/line_color" />

    <com.jusfoun.jusfouninquire.ui.widget.DisableMenuEditText
        android:id="@+id/contact_person"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_below="@+id/line4"
        android:background="@color/white"
        android:hint="您的联系电话"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="16dp"
        android:textColor="@color/edit_text_color"
        android:textColorHint="@color/eidt_hint_textcolor"
        android:paddingLeft="10dip"/>

    <Button
        android:id="@+id/submitFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_person"
        android:layout_marginLeft="32dip"
        android:layout_marginRight="32dip"
        android:layout_marginTop="50dip"
        android:background="@mipmap/button"
        android:text="提交"
        android:textColor="@color/button_text_color"
        android:textSize="16dp" />


</RelativeLayout>