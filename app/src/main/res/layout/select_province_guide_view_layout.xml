<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/first_shader_view"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@color/black"
        android:alpha="0.8"
        />
    <View
        android:id="@+id/second_shader_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/first_shader_view"
        android:background="@color/white"
        android:alpha="0"
        />
    <View
        android:id="@+id/third_shader_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/second_shader_view"
        android:background="@color/black"
        android:alpha="0.8"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/select_provincec_guide"
        android:layout_below="@id/first_shader_view"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>