<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/pushToFriendLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_margin_left_or_right"
        android:paddingRight="@dimen/padding_margin_left_or_right"
        >
        <ImageView
            android:id="@+id/logo_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/view_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_image1"
            android:layout_toRightOf="@id/logo_first"
            android:textColor="@color/edit_text_color"
            android:layout_marginLeft="12dp"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/arrow_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrows"/>
    </RelativeLayout>

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:layout_below="@id/pushToFriendLayout"
        android:background="@color/activity_background"
        android:visibility="gone"/>


</RelativeLayout>