<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    style="@style/MyTheme.Layout.Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_set"
    android:clickable="true"
    android:orientation="vertical">

    <com.jusfoun.jusfouninquire.ui.view.CustomScrollView
        android:id="@+id/setting_scrollview"
        style="@style/dislodge_scroll_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/top_layout_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_top"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_about_us" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="59dp"
                        android:layout_height="59dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="45dip"
                        android:src="@drawable/img_login_logo" />

                    <TextView
                        android:id="@+id/versionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/app_logo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/title_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/versionText"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="更权威的企业信息查询平台"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <com.jusfoun.library.flipdigit.Flipmeter
                        android:id="@+id/Flipmeter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_first"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp" />

                    <TextView
                        android:id="@+id/temp_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Flipmeter"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/reminder_company_update_text"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="316dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_margin_left_or_right">

                        <TextView
                            android:id="@+id/app_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dip"
                            android:text="@string/intro_share"
                            android:textColor="@color/edit_text_color"
                            android:textSize="14dp" />

                        <Button
                            android:id="@+id/checkVersionBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_description"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginTop="25dip"
                            android:background="@mipmap/button"
                            android:textColor="@color/button_text_color"
                            android:textSize="16dp" />

                        <View
                            android:id="@+id/iline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkVersionBtn"
                            android:layout_marginTop="20dip" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:visibility="gone"
                    android:background="@color/line_color" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dip"
                    android:background="@color/line_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_set_icon_color"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <RelativeLayout
                        android:id="@+id/common_problem"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/qqw"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/lights" />

                        <TextView
                            android:id="@+id/wwww"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:layout_toRightOf="@+id/qqw"
                            android:text="常见问题"
                            android:textColor="#666666"
                            android:textSize="16dp" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="5dp"
                            android:src="@drawable/go_to" />

                    </RelativeLayout>


                    <View
                        style="@style/C_Line_2" />

                    <RelativeLayout
                        android:id="@+id/massage_return"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/suggesst_you"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/pencile" />

                        <TextView
                            android:id="@+id/sugesst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:layout_toRightOf="@+id/suggesst_you"
                            android:text="意见反馈"
                            android:textColor="#666666"
                            android:textSize="16dp" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="5dp"
                            android:src="@drawable/go_to" />

                    </RelativeLayout>

                    <View
                        style="@style/C_Line_2" />

                    <com.jusfoun.jusfouninquire.ui.view.SettingBottomView
                        android:id="@+id/default_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1px"-->
                        <!--android:layout_marginLeft="5dp"-->
                        <!--android:background="@color/line_color" />-->

                    <com.jusfoun.jusfouninquire.ui.view.SettingBottomView
                        android:id="@+id/default_common_problem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/layout_qq"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/first_user"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/icon_qq" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="11dp"
                            android:text="QQ:"
                            android:textColor="#999999"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/text_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="39dp"
                            android:textColor="#333333"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <View
                        style="@style/C_Line_2" />

                    <LinearLayout
                        android:id="@+id/layout_group"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/icon_qq_group" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="11dp"
                            android:text="QQ群:"
                            android:textColor="#999999"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/text_qq_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="24dp"
                            android:textColor="#333333"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <View
                        style="@style/C_Line_2" />

                    <LinearLayout
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/icon_set_email" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="11dp"
                            android:text="邮箱:"
                            android:textColor="#999999"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/text_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="33dp"
                            android:textColor="#333333"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <View
                        style="@style/C_Line_2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/qq"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_set_phone" />

                        <TextView
                            android:id="@+id/www"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:layout_toRightOf="@+id/qq"
                            android:text="电话:"
                            android:textColor="#999999"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/text_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/arrow_image1"
                            android:layout_toRightOf="@+id/www"
                            android:paddingLeft="33dp"
                            android:textColor="#4c8caf"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="5dp"
                            android:src="@drawable/go_to"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        style="@style/C_Line_2" />

                </LinearLayout>

            </LinearLayout>

            <com.jusfoun.jusfouninquire.ui.view.MarqueeVerticalView
                android:id="@+id/PaomaView"
                android:layout_width="fill_parent"
                android:layout_height="90dip"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:visibility="gone" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/line_color"
                android:visibility="gone" />
        </RelativeLayout>
    </com.jusfoun.jusfouninquire.ui.view.CustomScrollView>

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/img_com_detail_to">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </RelativeLayout>

    <com.jusfoun.jusfouninquire.ui.view.NetWorkErrorView
        android:id="@+id/net_work_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone" />

    <include
        layout="@layout/layout_loading"
        android:visibility="gone" />
</RelativeLayout>