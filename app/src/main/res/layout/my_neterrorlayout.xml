<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/netcuowu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/nodata_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/net_error_icon"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/error_text"
        android:layout_marginBottom="38dip"
        />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/net_error"
        android:textSize="16dp"
        android:textColor="@color/list_title_text_color"
        />

    <RelativeLayout
        android:id="@+id/net_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_text"
        android:paddingTop="13dp"
        >
        <ImageView
            android:id="@+id/net_refresh_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/net_refresh_text"
            android:src="@mipmap/net_refresh"
            />
        <TextView
            android:id="@+id/net_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"

            android:layout_centerHorizontal="true"
            android:textSize="14dp"
            android:textColor="#666666"
            android:text="点击刷新页面"
            />
    </RelativeLayout>

</RelativeLayout>