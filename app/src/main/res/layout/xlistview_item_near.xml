<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_item_2"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="21dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/company_state"
            style="@style/C_Xucun" />

        <LinearLayout style="@style/C_110">

            <TextView
                style="@style/C_111"
                android:text="法定代表人：" />

            <TextView
                android:id="@+id/text_legal"
                style="@style/C_113"
                android:textColor="#1E9EFB" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout style="@style/C_110">

                <TextView
                    style="@style/C_111"
                    android:text="注册资金：" />

                <TextView
                    android:id="@+id/company_info"
                    style="@style/C_113" />
            </LinearLayout>

            <TextView
                android:id="@+id/company_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            style="@style/C_110"
            android:visibility="gone">

            <TextView
                style="@style/C_111"
                android:text="成立时间：" />

            <TextView style="@style/C_113" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relate_layout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/img_item_1"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/text_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#a8704c"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_loadtion_near" />

    </RelativeLayout>

</LinearLayout>