<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyTheme.Layout.Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.jusfoun.jusfouninquire.ui.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/C_107"
        android:layout_marginTop="50dp">

        <ImageView
            style="@style/C_101_2"
            android:src="@drawable/img_phone" />

        <EditText
            android:id="@+id/phoneNumEdit"
            style="@style/C_106"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入手机号" />

    </LinearLayout>

    <com.jusfoun.jusfouninquire.ui.view.LineScaleView
        android:id="@+id/vLine1"
        style="@style/C_LineView" />

    <LinearLayout
        style="@style/C_107"
        android:layout_marginTop="20dp">

        <ImageView
            style="@style/C_101_2"
            android:src="@drawable/img_msg" />

        <EditText
            android:id="@+id/auth_code_Edit"
            style="@style/C_106"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:inputType="number" />

        <TextView
            android:id="@+id/getAuthCode"
            style="@style/C_Code" />

    </LinearLayout>

    <com.jusfoun.jusfouninquire.ui.view.LineScaleView
        android:id="@+id/vLine2"
        style="@style/C_LineView" />

    <Button
        android:id="@+id/btn_info"
        style="@style/C_Common_Bt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="51dip"
        android:text="补充信息 完成注册" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dip"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果您已有聚信账户，可用聚信账户直接"
            android:textColor="#999"
            android:visibility="gone"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/go_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="登录"
            android:textColor="#37A9FC"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>