<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:angle="0"
                android:centerColor="#3f8df4"
                android:endColor="#559bef"
                android:startColor="#176eef" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:angle="0"
                android:centerColor="#4192FD"
                android:endColor="#5AA3FC"
                android:startColor="#1975FE" />
        </shape>
    </item>
</selector>